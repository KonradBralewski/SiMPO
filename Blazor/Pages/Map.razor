    <iframe style="height: 80%; width: 100%; border: 0;"  src="https://craftserve.pl/s/1092374/map?widget"></iframe>
</MudContainer>

<MudContainer Style="height: 100vh; width: 100vw; max-width: 100vw;" Class="d-none d-lg-flex align-center justify-center">
    <iframe style="height: 90%; width: 90%; border: 0;" src="https://craftserve.pl/s/1092374/map?widget" onload="@(() => {_isMapLoaded = true;})"></iframe>
</MudContainer>