@using Components.Players

@page "/players"

<PageTitle>Players</PageTitle>

@if(_users is not null)
{
    <MudGrid Justify="Justify.Center" Class="mt-4 mt-sm-15">
        @foreach(var user in _users)
        {
            <MudItem xs="9" md="5">
                <PlayerCard Nickname="@user.Nickname" PlayerRole="@user.Role" 
                    MudCardContentStyle="text-align: center;" MudCardActionsClass="justify-center align-center"
                    DiscordId="@user.DiscordId" />
            </MudItem>
        }
    </MudGrid>

}

