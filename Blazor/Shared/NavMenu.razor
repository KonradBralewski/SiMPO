<MudLink Href="/" Typo="Typo.h2" Class="mud-palette-primary mr-4">SiMPO</MudLink>
<MudSpacer/>
<MudSwitch @bind-Checked="IsDarkMode" onclick="@ToggleDarkMode" Label="@_togglerLabel"/>
<MudContainer Class="d-flex flex-row gap-5 mr-0 align-center justify-end">
    <MudLink Href="/" Typo="Typo.h6">Players (todo)</MudLink>
    <MudLink Href="/" Typo="Typo.h6">Map (todo)</MudLink>
    <MudLink Href="/" Typo="Typo.h6">Mods (todo)</MudLink>
    <MudLink Href="/" Typo="Typo.h6">Forum (todo)</MudLink>
    <MudLink Href="/contact" Typo="Typo.h6">Contact (in progress)</MudLink>
    <AuthorizeView>
        <NotAuthorized>
            <MudButton Class="pa-3" OnClick="@ShowLoginDialog" Variant="Variant.Filled" Color="Color.Secondary">Log In</MudButton>
            <MudButton Class="pa-3" OnClick="@ShowSignUpDialog" Variant="Variant.Filled" Color="Color.Secondary">Sign Up</MudButton>
        </NotAuthorized>
        <Authorized>
            <MudButton OnClick="@Logout"
                Class="pa-3" Style="@($"color:{Colors.Red.Default}; background:{Colors.BlueGrey.Darken4}; font-weight: 700;")">Log out</MudButton>
        </Authorized>
    </AuthorizeView>
</MudContainer>