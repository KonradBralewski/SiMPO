<MudContainer Class="d-flex d-md-none flex-column mt-6 gap-5 align-center justify-center">
    <AuthenticationButtons ContainerClass="d-flex d-sm-none flex-row gap-5 mr-0 align-center justify-center"
                           SignInButtonClass="pa-1"
                           SignInButtonStyle="width: 125px; height: 50px; font-size: var(--mud-typography-h5-size)"
                           SignUpButtonClass="pa-1"
                           SignUpButtonStyle="width: 125px; height: 50px; font-size: var(--mud-typography-h5-size)"
                           LogOutButtonClass="pa-3"
                           LogOutButtonStyle="@($"color:{Colors.Red.Default}; background:{Colors.BlueGrey.Darken4}; font-weight: 700; width: 125px;")"
                           ProfileButtonClass="pa-3"
                           ProfileButtonStyle="@($"color:{Colors.Lime.Accent1}; background:{Colors.BlueGrey.Darken4}; font-weight: 700; width: 125px;")" />

    <MudGrid Justify="Justify.Center" Spacing="2">
        <MudItem xs="6" sm="4" Style="text-align: center;">
            @*XS Breakpoint*@
            <MudButton Class="d-inline-flex d-sm-none"
                       Href="/players"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.EmojiPeople"
                       Color="Color.Secondary"
                       Style=@_xsButtonStyle>
                Players
            </MudButton>
            @*XS Breakpoint*@
            @*SM Breakpoint*@
            <MudButton Class="d-none d-sm-inline-flex d-md-none"
                       Href="/players"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.EmojiPeople"
                       Color="Color.Secondary"
                       Style=@_smButtonStyle>
                Players
            </MudButton>
            @*SM Breakpoint*@
        </MudItem>
        <MudItem xs="6" sm="4" Style="text-align: center; margin-top: 0px;">
            @*XS Breakpoint*@
            <MudButton Class="d-inline-flex d-sm-none"
                       Href="/map"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.Map"
                       Color="Color.Secondary"
                       Style=@_xsButtonStyle>
                Map
            </MudButton>
            @*XS Breakpoint*@
            @*SM Breakpoint*@
            <MudButton Class="d-none d-sm-inline-flex d-md-none"
                       Href="/map"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.Map"
                       Color="Color.Secondary"
                       Style=@_smButtonStyle>
                Map
            </MudButton>
            @*SM Breakpoint*@
        </MudItem>
        <MudContainer Style="width: 100%; height: fit-content;" Class="d-flex d-sm-none align-center justify-center">
            <MudButton Class="d-flex d-sm-none" Href="/contact" Style=@_xsButtonStyle
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"Color="Color.Secondary" EndIcon="@Icons.Material.Filled.ContactSupport">Contact</MudButton>
        </MudContainer>
        <MudItem xs="6" sm="4" Style="text-align: center; margin-top: 0px;">
            @*XS Breakpoint*@
            <MudButton Class="d-inline-flex d-sm-none"
                       Href="/mods"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.MenuBook"
                       Color="Color.Secondary"
                       Style=@_xsButtonStyle>

                Mods
            </MudButton>
            @*XS Breakpoint*@
            @*SM Breakpoint*@
            <MudButton Class="d-none d-sm-inline-flex d-md-none"
                       Href="/mods"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.MenuBook"
                       Color="Color.Secondary"
                       Style=@_smButtonStyle>

                Mods
            </MudButton>
            @*SM Breakpoint*@
        </MudItem>
        <MudItem xs="6" sm="4" Style="text-align: center; margin-top: 0px;">
            @*XS Breakpoint*@
            <MudButton Class="d-inline-flex d-sm-none"
                       Href="/shop"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.ShoppingCart"
                       Color="Color.Secondary"
                       Style=@_xsButtonStyle>
                Shop
            </MudButton>
            @*XS Breakpoint*@
            @*SM Breakpoint*@
            <MudButton Class="d-none d-sm-inline-flex d-md-none"
                       Href="/shop"
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       EndIcon="@Icons.Material.Filled.ShoppingCart"
                       Color="Color.Secondary"
                       Style=@_smButtonStyle>
                Shop
            </MudButton>
            @*SM Breakpoint*@
        </MudItem>
        <MudItem sm="4" Class="d-none d-sm-block d-md-none">
            <MudButton Href="/contact" Style=@_smButtonStyle
                       Variant="Variant.Filled"
                       IconColor="Color.Tertiary"
                       Color="Color.Secondary" EndIcon="@Icons.Material.Filled.ContactSupport">Contact</MudButton>
        </MudItem>
    </MudGrid>
    
</MudContainer>
@code {
    private readonly string _xsButtonStyle = $"color: var(--mud-palette-primary); font-weight: bold; width: {_xsBreakpointButtonMaxWidth};";
    private readonly string _smButtonStyle = $"color: var(--mud-palette-primary); font-weight: bold; width: {_smBreakpointButtonMaxWidth};";


    private static readonly string _xsBreakpointButtonMaxWidth = "120px";
    private static readonly string _smBreakpointButtonMaxWidth = "190px";
}