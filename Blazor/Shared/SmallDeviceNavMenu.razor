                           LogOutButtonStyle="@($"color:{Colors.Red.Default}; background:{Colors.BlueGrey.Darken4}; font-weight: 700; width: 125px;")" />

    <MudGrid Justify="Justify.Center" Spacing="1">
        <MudItem xs="5" Style="text-align: center;">
            <MudLink Href="/" Typo="Typo.h4" Style="font-weight: bold;">Players</MudLink>
        </MudItem>
        <MudItem xs="5" Style="text-align: center; margin-top: 0px;">
            <MudLink Href="/" Typo="Typo.h4" Style="font-weight: bold;">Map</MudLink>
        </MudItem>
        <MudIcon />
        <MudItem xs="5" Style="text-align: center; margin-top: 0px;">
            <MudLink Href="/" Typo="Typo.h4" Style="font-weight: bold;">Mods</MudLink>
        </MudItem>
        <MudItem xs="5" Style="text-align: center; margin-top: 0px;">
            <MudLink Href="/" Typo="Typo.h4" Style="font-weight: bold;">Forum</MudLink>
        </MudItem>
    </MudGrid>
    <MudLink Href="/contact" Typo="Typo.h4" Style="font-weight: bold; margin-top: -15px;">Contact</MudLink>

    
</MudContainer>