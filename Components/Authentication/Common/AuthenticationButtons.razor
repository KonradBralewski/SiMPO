<MudContainer Class="@ContainerClass" Style="@ContainerStyle">
    <AuthorizeView>
            <NotAuthorized>
                <MudButton Class="@SignInButtonClass" Style="@SignInButtonStyle" OnClick="@ShowLoginDialog" Variant="Variant.Filled" Color="Color.Secondary">Log In</MudButton>
                <MudButton Class="@SignUpButtonClass" Style="@SignUpButtonStyle" OnClick="@ShowSignUpDialog" Variant="Variant.Filled" Color="Color.Secondary">Sign Up</MudButton>
            </NotAuthorized>
            <Authorized>
            <MudButton Href="/profile" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.SettingsAccessibility"
                       Class="@ProfileButtonClass" Style="@ProfileButtonStyle">Profile</MudButton>
                <MudButton OnClick="@Logout" Variant="Variant.Filled" EndIcon="@Icons.Material.Filled.Logout"
                    Class="@LogOutButtonClass" Style="@LogOutButtonStyle">Log out</MudButton>
            </Authorized>
    </AuthorizeView>
</MudContainer>