<MudDialog ClassContent="">
    <DialogContent>
        <EditForm Model="@_user">
        <FluentValidationValidator @ref="@_fluentValidationValidator"/>
        <MudGrid>
                <MudItem>
                    <MudCard>
                        <MudCardContent>
                            <MudTextField @bind-Value="_user.Nickname" Label="Nickname" />
                            <MudTextField @bind-Value="_user.Email" Label="Email" />
                            <MudTextField @bind-Value="_user.Password" Label="Password" />
                            <MudTextField @bind-Value="_passwordConfirmation" Label="Confirm Password" />
                            <MudContainer class="d-flex flex-row justify-center align-center">
                                <MudCheckBox @bind-Checked="_checkedTOS"/>
                                <MudText onclick="@ShowTOS" Typo="Typo.h6" Color="Color.Info" Style="align-self: center;">Terms of Service</MudText>
                            </MudContainer>
                        </MudCardContent>
                    </MudCard>
                </MudItem>
         </MudGrid>
        </EditForm>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Submit" Class="mr-auto ml-auto mud-theme-primary registerDialogButton">Register</MudButton>
        <MudButton OnClick="Cancel" Class="mr-auto ml-auto mud-theme-error errorDialogButton">Cancel</MudButton>
    </DialogActions>
</MudDialog>    