<MudDialog Class="p-30">
    <DialogContent>
        <MudContainer Style="background-color:blueviolet; max-height: 50vh;" Class="overflow-scroll">
            @foreach(string message in _messages)
            {
                <MudText>@message</MudText>
            }
        </MudContainer>
    </DialogContent>
    <DialogActions>
        <MudTextField @bind-Value="_userMessage" Label="Your message" Variant="Variant.Outlined"
            Adornment="Adornment.End" AdornmentIcon="@Icons.Material.Filled.Send" AdornmentColor="Color.Secondary"
            OnAdornmentClick="@Send"/>
    </DialogActions>
</MudDialog>