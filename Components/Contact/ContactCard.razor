@page "/contactCard/{name?}"
@page "/contactCard/{description?}"
@page "/contactCard/{discordLink?}"
@page "/contactCard/{emailAddress?}" 

@inherits MudCardDerrived;

<MudCard>
    <MudCardHeader Class="@MudCardHeaderClass" Style="@MudCardHeaderStyle">
        <CardHeaderAvatar>
            <MudAvatar>@Name?.First()</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="@MudCardContentClass" Style="@MudCardContentStyle">
        <MudText>@Description</MudText>
    </MudCardContent>
    <MudCardActions Class="@MudCardActionsClass" Style="@MudCardActionsStyle">
        @if (DiscordLink != null)
        {
            <MudImage Src="/_content/Components/images/contact/discord-mark-blue.svg" Fluid="true" Width="50"
            onclick="@GoToDiscord"/>
        }
        @if(EmailAddress != null)
        {
            <MudIconButton Icon="@Icons.Material.Filled.Email" Size="Size.Large" Target="_blank" Color="Color.Secondary" Href="@($"mailto:{EmailAddress}")"/>
        }
    </MudCardActions>
</MudCard>
