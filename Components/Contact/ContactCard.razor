@page "/contact/{name?}"
@page "/contact/{description?}"
@page "/contact/{discordLink?}"
@page "/contact/{emailAddress?}"


<MudCard>
    <MudCardHeader>
        <CardHeaderAvatar>
            <MudAvatar>@Name?.First()</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h6">@Name</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent>
        <MudText>@Description</MudText>
    </MudCardContent>
    <MudCardActions>
        @if (DiscordLink != null)
        {
            <MudImage Src="/_content/SiMPO.Components/images/contact/discord-mark-blue.svg" Fluid="true" Width="50"
            onclick="@GoToDiscord"/>
        }
        @if(EmailAddress != null)
        {
            <MudIconButton Icon="@Icons.Material.Outlined.Email" Target="_blank" Href="@($"mailto:{EmailAddress}")"/>
        }
    </MudCardActions>
</MudCard>
