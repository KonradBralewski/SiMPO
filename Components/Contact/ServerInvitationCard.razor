@inherits MudCardDerrived;

<MudCard Class="@MudCardClass" Style="@MudCardStyle">
    <MudCardHeader Class="@MudCardHeaderClass" Style="@MudCardHeaderStyle">
        <CardHeaderContent>
            <MudText Typo="Typo.h5" Color="Color.Secondary">SiMPO</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="@MudCardContentClass" Style="@MudCardContentStyle">
        <MudImage Src="/_content/Components/images/contact/discord-mark-blue.svg" Fluid="true" Width="50"
                  onclick="@GoToDiscord" />
        <MudText Style="font-weight: bold;">Join to our discord community =)</MudText>
    </MudCardContent>
</MudCard>
