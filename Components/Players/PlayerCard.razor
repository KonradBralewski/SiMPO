@page "/playerCard/{nickname?}"
@page "/playerCard/{playerRole?}"
@page "/playerCard/{description?}"

@inherits MudCardDerrived;

<MudCard>
    <MudCardHeader Class="@MudCardHeaderClass" Style="@MudCardHeaderStyle">
        <CardHeaderAvatar>
            <MudAvatar>@Nickname?.First()</MudAvatar>
        </CardHeaderAvatar>
        <CardHeaderContent>
            <MudText Typo="Typo.h5">@Nickname</MudText>
            <MudText Typo="Typo.h5" Style="@_playerRoleStyling">@PlayerRole</MudText>
        </CardHeaderContent>
    </MudCardHeader>
    <MudCardContent Class="@MudCardContentClass" Style="@MudCardContentStyle">
        <MudText>@Description</MudText>
    </MudCardContent>
    <MudCardActions Class="@MudCardActionsClass" Style="@MudCardActionsStyle">
        @if (DiscordLink != null)
        {
            <MudImage Src="/_content/Components/images/contact/discord-mark-blue.svg" Fluid="true" Width="50"
                      onclick="@GoToDiscord" />
        }
    </MudCardActions>
</MudCard>
